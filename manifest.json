{
    "manifest_version": 2,
    "name": "SkipMyAccessibility",
    "description": "Skips the Accessibility Mode Chooser when signing into MyUCSC and enables SSO by default.",
    "version": "1.1",
    "content_scripts": [
        {
            "matches": ["https://my.ucsc.edu/psp/csprd/*"],
            "js": ["shibSubmit.js"],
            "run_at": "document_end"
        },
		{
            "matches": ["https://login.ucsc.edu/idp/profile/SAML2/Redirect/*"],
            "js": ["noSSO.js"],
            "run_at": "document_end"
        }
    ],  
    "permissions": [
            "activeTab"
            ]
}